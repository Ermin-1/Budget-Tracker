@model Transaction

@{
    ViewData["PageTitle"] = Model.TransactionId == 0 ? "Add Transaction" : "Edit Transaction";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">

            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Dropdown för kategorier -->
                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCategory" ejs-for="CategoyId" dataSource="@ViewBag.Categories"
                                      placeholder="All categories" floatLabelType="Always" allowFiltering="true" ignoreAccent="true" filterType="Contains" popupHeight="200px">
                        <e-dropdownlist-fields value="CategoryId" text="TitleWithIcon"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                </div>

                <!-- NumericTextbox för belopp -->
                <div class="mb-3">
                    <ejs-numerictextbox id="amount" ejs-for="Amount" placeholder="Amount"
                                        floatLabelType="Always" min="0" format="n0"></ejs-numerictextbox>
                </div>

                <!-- Textbox för anteckningar -->
                <div class="mb-3">
                    <ejs-textbox id="note" ejs-for="Note" placeholder="Note"
                                 floatLabelType="Always" multiline="true"></ejs-textbox>
                </div>

                <!-- Datepicker för datum -->
                <div class="mb-3">
                    <ejs-datepicker id="date" ejs-for="Date" placeholder="Date"
                                    floatLabelType="Always" format="MMM-dd-yyyy"></ejs-datepicker>
                </div>

                <!-- Submit-knapp -->
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>

            </form>

        </div>
    </div>

    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
</div>

